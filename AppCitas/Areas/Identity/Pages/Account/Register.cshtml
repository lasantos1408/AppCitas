@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar usuario";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<h4>Create a new account.</h4>
        <hr />*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <hr />
            <div class="form-group">
                <label>Nombres</label>
                <input asp-for="Input.Nombres" class="form-control" />
                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label>Apellidos</label>
                <input asp-for="Input.Apellidos" class="form-control" />
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label>RUN</label>
                <input asp-for="Input.RUN" class="form-control" />
                <span asp-validation-for="Input.RUN" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           
            @*<div class="form-group">
            <label>Usuario administrador</label>
            <input type="checkbox" name="myCheckbox" asp-for="Input.Administrador">
        </div>*@
            @if (User.Identity.Name != null)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            Usuario Administrador
                            <input asp-for="Input.Administrador" />
                            @*@Html.DisplayNameFor(m => m.Input.Administrador)*@
                        </label>
                    </div>
                </div>
              
            }
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
